{
  "name": "scrapypilot",
  "version": "1.0.0",
  "description": "Desktop application to manage and control Claude based VM instances",
  "main": "dist/main/main.js",
  "scripts": {
    "clean": "rimraf dist build",
    "build": "npm run clean && tsc",
    "watch": "tsc -w",
    "start": "npm run build && electron .",
    "dev": "concurrently \"tsc -w\" \"electron .\"",
    "package": "electron-builder build --win --mac --linux",
    "test": "jest"
  },
  "keywords": [
    "electron",
    "scrapybara",
    "vm-management"
  ],
  "author": "Ayush Shah",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "concurrently": "^8.2.2",
    "electron": "^33.3.1",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "sass": "^1.71.1",
    "ts-jest": "^29.1.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "axios": "^1.6.7",
    "dotenv": "^16.4.7",
    "electron-store": "^8.2.0",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.scrapypilot.app",
    "productName": "ScrapyPilot",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
